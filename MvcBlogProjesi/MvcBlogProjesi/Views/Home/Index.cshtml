@model IEnumerable<MvcBlogProjesi.Models.BlogModel>
@{
    ViewBag.Title = "Anasayfa";
}

@foreach (var blog in Model)
{
    <div class="blog">
        
        <h3>@Html.ActionLink(blog.Baslik,"Details","Blogs",new { id = blog.Id }, new { @class = "page-header" })</h3>
        <p>
            <span class="glyphicon glyphicon-time"></span>
            @blog.EklenmeTarihi
        </p>
        <hr />

        <img class="img-fluid" alt="Responsive image" src="@blog.Resim" />
        <hr />
        <p>
            @blog.Aciklama
        </p>
        @*@Html.ActionLink("Daha Fazla...", "Details", "Blogs", new { id = @blog.Id }, new { @class = "btn btn-primary btn-xs" })*@
        <br />
        <br />

    </div>
}

