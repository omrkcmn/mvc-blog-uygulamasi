<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Ömer KOCAMAN</title>

    <link href="~/Content/vendor/bootstrap/css/bootstrap.css" rel="stylesheet" />
    <link href="~/Content/vendor/bootstrap/css/bootstrap.min.css" rel="stylesheet" />
    
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">

    <script src="~/Scripts/modernizr-2.6.2.js"></script>
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container">

            <a class="navbar-brand" href="~/Home">Ömer KOCAMAN</a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <hr />

            <div class="collapse navbar-collapse" id="navbarSupportedContent">
                <ul class="navbar-nav mr-auto">
                    <li class="nav-item active">
                        <a class="nav-link" href="~/Home/"><i class="fa fa-fw   fa-home"></i> Anasayfa</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="~/Home/About"><i class="fa fa-fw fa-user-circle"></i>Hakkımda</a>
                    </li>
                </ul>
                @using (Html.BeginForm("List", "Blogs", FormMethod.Get, new { @class = "form-inline my-2 my-lg-0" }))
                {

                  @Html.TextBox("q",null, new { @class = "form-control mr-sm-2", @placeholder="Ara"})
                  <button class="btn btn-primary my-2 my-sm-0" type="submit">Ara</button>

                }
                
            </div>
        </div>
    </nav>
    <br />
    <br />

    <div class="container body-content">
        <div class="row">
            <div class="col-md-12">
                @RenderBody()
            </div>
            <div class="col-lg-6">
                asdasd
            </div>
        </div>
    </div>
    <hr />
    <footer class="content-footer">
        asdasdasdasdd
    </footer>

    <script src="~/Scripts/jquery-1.10.2.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
</body>
</html>